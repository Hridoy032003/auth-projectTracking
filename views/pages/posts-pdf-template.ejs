<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.1/dist/tailwind.min.js"></script>
</head>

<body class="bg-gray-50 text-gray-900">

    <div class="container py-5">
        <!-- Header -->
        <div class="text-center bg-white p-10 rounded-lg shadow-lg mb-5">
            <h1 class="display-4 font-extrabold text-gray-800">
                <%= title %>
            </h1>
            <p class="lead text-lg text-gray-500 mt-3">
                This document contains all posts by <strong class="font-semibold text-gray-800">
                    <%= user.username %>
                </strong>.
            </p>
        </div>

        <hr class="mb-5">

        <% if (posts && posts.length> 0) { %>
            <% posts.forEach(function(post) { %>
           
                <div class="card mb-4 shadow-lg rounded-lg p-4 bg-white hover:shadow-xl transition-shadow duration-300">
                    <div class="card-body">
                        <h2 class="card-title text-2xl font-semibold text-blue-600">
                            <%= post.title %>
                        </h2>
                        <p class="card-subtitle mb-3 text-sm text-gray-400">
                            Created on: <%= new Date(post.createdAt).toLocaleDateString() %>
                        </p>
                        <div class="card-text mt-4 text-lg text-gray-700">
                            <%- post.content %>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="alert alert-warning bg-yellow-100 text-yellow-800 p-6 rounded-lg shadow-md">
                            <h4 class="alert-heading text-xl font-semibold">No Posts Found</h4>
                            <p class="text-gray-700">This user has not created any posts yet.</p>
                        </div>
                        <% } %>

                         
                            <footer class="text-center text-gray-500 text-sm mt-5">
                                <p>Generated on <%= new Date().toLocaleDateString() %>
                                </p>
                            </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>